---
interface Props {
  variant?: "default" | "primary" | "outline";
  type?: "button" | "a";
  href?: string;
  class?: string;
  data?: string;
}

const buttonVariants = {
  variants: {
    default: "bg-primary text-white hover:bg-primary-hover",
    primary: "bg-primary text-white",
    outline:
      "border-2 border-border text-text-secondary hover:bg-border hover:text-primary",
    // size: {
    //   default: "h-[44px] px-6",
    //   md: "h-[48px] px-6",
    //   lg: "h-[56px] px-8 text-sm uppercase tracking-[2px]",
    // },
  },
};

const {
  variant = "default",
  type = "button",
  href,
  class: className,
  data,
} = Astro.props;
---

{
  type === "button" ? (
    <button
      class={`px-4 py-2 text-sm rounded-lg ${buttonVariants.variants?.[variant]} ${className}`}
      data-category={data ?? data}
    >
      <slot />
    </button>
  ) : (
    <a
      href={href}
      target="_blank"
      class={`flex items-center justify-center px-4 py-2 text-sm rounded-lg ${buttonVariants.variants?.[variant]} ${className}`}
    >
      <slot />
    </a>
  )
}
<style>
  .filter-btn.active {
    @apply bg-primary text-white border-primary;
  }
</style>
